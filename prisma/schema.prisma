generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  admin   @map("ADMIN")
  student @map("STUDENT")
  tutor   @map("TUTOR")
}

enum UserStatus {
  active @map("ACTIVE")
  banned @map("BANNED")
}

model User {
  id            String   @id
  name          String
  email         String
  password      String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  role   UserRole   @default(student)
  status UserStatus @default(active)

  // accounts removed for pure JWT auth
  bookings      Booking[]
  tutorProfiles TutorProfile?

  @@unique([email])
  @@map("users")
}

// Session model removed for JWT-based auth

// Account model removed for pure JWT auth

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// extra models by me 

model Category {
  id            String         @id @default(uuid())
  name          String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  tutorProfiles TutorProfile[]

  @@map("categories")
}

enum WeekDay {
  saturday  @map("SATURDAY")
  sunday    @map("SUNDAY")
  monday    @map("MONDAY")
  tuesday   @map("TUESDAY")
  wednesday @map("WEDNESDAY")
  thursday  @map("THURSDAY")
  friday    @map("FRIDAY")
}

model Available {
  id        String       @id @default(uuid())
  day       WeekDay      @default(saturday)
  tutorId   String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  bookings  Booking[]

  @@unique([tutorId, day])
  @@map("availabilities")
}

model TutorProfile {
  id           String   @id @default(uuid())
  title        String
  description  String?
  startTime    DateTime @db.Time()
  endTime      DateTime @db.Time()
  pricePerHour Int
  active       Boolean  @default(true)
  categoryId   String
  userId       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user           User        @relation(fields: [userId], references: [id])
  category       Category    @relation(fields: [categoryId], references: [id])
  availabilities Available[]
  bookings       Booking[]

  @@map("tutorprofiles")
}

enum BookingStatus {
  confirmed @map("CONFIRMED")
  completed @map("COMPLETED")
  cancelled @map("CANCELLED")
}

model Booking {
  id          String        @id @default(uuid())
  tutorId     String
  studentId   String
  availableId String
  date        DateTime      @db.Date
  startTime   DateTime      @db.Time()
  endTime     DateTime      @db.Time()
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  status      BookingStatus @default(confirmed)
  totalPrice  Int

  tutor         TutorProfile @relation(fields: [tutorId], references: [id])
  student       User         @relation(fields: [studentId], references: [id])
  availableDate Available    @relation(fields: [availableId], references: [id])
  reviews       Review?

  @@map("bookings")
}

model Review {
  id        String   @id @default(uuid())
  rating    Int      @default(0) @db.SmallInt
  review    String?
  bookingId String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id])

  @@map("reviews")
}
