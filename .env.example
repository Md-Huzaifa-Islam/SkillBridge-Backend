# Copy this file to .env and fill values before running the app.

# Database (Postgres) connection string
# Example: postgresql://user:password@localhost:5432/skillbridge
DATABASE_URL=

# JWT signing secret
JWT_SECRET=

# SMTP (email) credentials - used for verification emails
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# Frontend application base URL (used in emails and redirects)
# Example: APP_URL=http://localhost:3000
APP_URL=

# Admin seed credentials (only used by local seed script)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Server port
PORT=5000
